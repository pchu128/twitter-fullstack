<form class="form-signin" action="/admin/signin" method="POST" style="width: 350px;">

  <div class="title-container">
    <i class="mb-4 fas fa-crow fa-2x" style="color: #1DA1F2;"></i>
    <h3 class="mt-3 mb-5" style="font-family: 'Verdana'; font-weight: 900;">Log in as Admin</h3>
  </div>

  <div class="form-label-group md-form mb-5">
    <input class="form-control m-0" type="text" id="inputAccount" name="account" required autofocus>
    <label for="inputAccount">Phone, email, or username</label>
  </div>

  <div class="form-label-group md-form mb-4">
    <input class="form-control m-0" type="password" id="inputPassword" name="password" required autofocus>
    <label class="m-0" for="inputPassword">Password</label>
  </div>

  <button class="btn btn-md btn-block shadow-none mb-4" type="submit" style="
      font-size: medium; 
      border-radius: 20px; 
      color: white; 
      background-color: #1DA1F2;
      text-transform: none; 
      font-size: 14px;
      font-weight: 600;
      ">Log in</button>

  <div class="d-flex justify-content-center">
    <p class="mr-1">
      <a style="font-size: 15px; color: #1b95e0;" href="/signin">
        Sign in as User
      </a>
    </p>
  </div>
  <p class="text-center">
    <a style="font-size: 15px; color: gray; opacity: 0.3;" data-toggle="collapse" href="#collapse" role="button"
      aria-expanded="false" aria-controls="collapse">Admin Account for Demo
    </a>
  </p>
  <div class="collapse" id="collapse">
    <div class="card card-body">
      <small>Usernames:</small>
      <small>@admin</small>
      <br>
      <small>Password:</small>
      <small>12345678</small>
    </div>
  </div>
</form>