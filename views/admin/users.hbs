<div class="row">

  {{#each users}}
    <div class="card m-3" style="width: 250px;">
      <img class="card-img-top" src="{{this.cover}}" alt="Card image cap" style="width: 100%; height: 150px;">
      <img class="card-img mx-auto" src="{{this.avatar}}" style="width: 100px; height: 100px; border-radius: 50%; margin-top: -60px; border: 4px solid white;">
      <div class="card-body">
        <h5 class="card-title text-center mb-0 font-weight-bold">{{this.name}}</h5>
        <div class="text-center mb-2"><small class="text-muted">{{this.account}}</small></div>
        <p class="card-title text-center">
          <i class="far fa-comment-alt mr-2"> {{this.Tweets.length}}</i>
          <i class="far fa-heart"> {{this.Likes.length}}</i>
        </p>
        <p class="card-title text-center">
          {{this.Followings.length}}位 <span class="text-muted mr-2 ml-n1">跟隨中</span>
          {{this.Followers.length}}位 <span class="text-muted ml-n1">跟隨者</span>
        </p>
      </div>
    </div>
  {{/each}}

</div>