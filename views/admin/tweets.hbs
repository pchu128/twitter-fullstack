<div class="d-flex">
  <div class="tweets-container border-left border-right border-top">
    <div class="sticky-top border-bottom py-2" style="background-color: white;">
      <div class="home d-inline-block mt-3 ml-3">
        <a href="/tweets">
          <h5 class="text-dark font-weight-bold">Admin Home</h5>
        </a>
      </div>
    </div>

    <div class="user d-flex ml-3 my-2">
      <img class="rounded-circle" style="width: 50px; height: 50px;" src="{{user.avatar}}" />
      <div class="user-info d-flex flex-column ml-3">
        <p class="font-weight-bold m-0">{{user.name}}</p>
        <small class="text-muted m-0">{{user.account}}</small>
      </div>
    </div>

    <div class="divider border-top" style="background-color: #f7f9fa; height: 15px;"></div>

    <div class="mt-0 border-top">
      {{#each tweets}}
      <div class="tweet-container d-flex mt-2 border-bottom";>
        <div class="user">
          <img class="rounded-circle mt-2 ml-3" style="width: 50px; height: 50px;" src="{{this.User.avatar}}" />
        </div>
        <div class="content-container d-flex flex-column ml-3" style="width: 100%;">
          <div class="user-info d-flex align-items-baseline">
            <p class="font-weight-bold m-0">{{this.User.name}}</p>
            <small class="text-muted ml-1">{{this.User.account}} â€¢ {{moment this.createdAt}}</small>
          </div>
          <div class="text">
            <div class="text-break">
              <p class="card-text">{{this.description}}</p>
            </div>
          </div>
          <div class="tweet-nav d-flex my-2 ml-1">
            <div class="icon-comment flex-grow-1">
              <small class="text-muted">
                <i class="far fa-comment fa-lg"> {{this.Replies.length}}</i>
              </small>
            </div>
            <div class="icon-retweet flex-grow-1">
              <small class="text-muted">
                <i class="fas fa-retweet fa-lg"> 0</i>
              </small>
            </div>
            <div class="icon-heart flex-grow-1">
              <small class="text-muted">
                <i class="far fa-heart fa-lg" style="color: red;"> {{this.LikedUsers.length}}</i>
              </small>
            </div>
            <div class="icon-share flex-grow-1">
              <small class="text-muted">
                <i class="fas fa-share-square fa-lg"> 0</i>
              </small>
            </div>
          </div>
        </div>
        <form class="mt-1 ml-auto" action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </form>
      </div>
      {{/each}}
    </div>
  </div>
</div>