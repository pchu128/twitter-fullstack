<form class="form-signin" action="/signup" method="POST" style="width: 350px;">

  <div class="title-container">
    <i class="mb-4 fas fa-crow fa-2x" style="color: #1DA1F2;"></i>
    <h3 class="mt-3 mb-5" style="font-family: 'Verdana'; font-weight: 900;">Create your account</h3>
  </div>

  <div class="form-label-group md-form mb-2">
    <label for="inputAccount">User Name</label>
    <input type="text" id="inputAccount" name="account" class="form-control pb-0" required autofocus>
  </div>

  <div class="form-label-group md-form mb-2">
    <label for="inputName">Display Name</label>
    <input type="text" id="inputName" name="name" class="form-control pb-0" required>
  </div>

  <div class="form-label-group md-form mb-2">
    <label for="inputEmail">Email</label>
    <input type="text" id="inputEmail" name="email" class="form-control pb-0" required>
  </div>

  <div class="form-label-group md-form mb-2">
    <label for="inputPassword">Password</label>
    <input type="text" id="inputPassword" name="password" class="form-control pb-0" required>
  </div>

  <div class="form-label-group md-form mb-4">
    <label for="inputcheckPassword">Confirm Password</label>
    <input type="text" id="inputcheckPassword" name="checkPassword" class="form-control pb-0" required>
  </div>

  <button class="btn btn-md btn-block shadow-none mb-4" type="submit" style="
      font-size: medium; 
      border-radius: 20px; 
      color: white; 
      background-color: #1DA1F2;
      text-transform: none; 
      font-size: 14px;
      font-weight: 600;
      ">Sign up</button>

  <div class="text-center">
    <p><a style="font-size: 15px; color: #1b95e0;" href="/signin">Cancel</a></p>
  </div>
</form>