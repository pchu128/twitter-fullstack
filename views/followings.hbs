<div class="row border-right">
  <div class="col mt-2">
    <div class="row row-cols-1">
      <div class="col">
        <a href="/tweets">
          <h5 class="ml-2"><i class="fas fa-long-arrow-alt-left"></i>
        </a>
        &nbsp;{{user.name}}</h5>
        <small class="ml-2">&emsp;&emsp;{{user.Tweets.length}} 推文</small>
      </div>
      <div class="mt-3">
        <ul class="nav nav-tabs bt-4">
          <li class="nav-item">
            <a class="nav-link" href="/users/{{user.id}}/followers">跟隨者</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/users/{{user.id}}/followings">正在跟隨</a>
          </li>
        </ul>
      </div>

      <div>
        <ul class="list-group">
          {{#each users}}
          <li class="list-group-item">
            <div class="row">
              <div class="col-3">
                <a href="/users/{{this.id}}/tweets">
                  <img class="rounded-circle w-100" src="{{this.avatar}}" />
                </a>
              </div>
              <div class="col-7">
                <div class="row">
                  <h4>{{this.name}}</h4>
                </div>
                <div class="row">
                  <small class="text-muted">{{this.account}}</small>
                </div>
                <div class="row mt-3">
                  {{this.Tweets.description}}
                </div>
              </div>
              <div class="col-2">
                {{#ifNotCond ../loginUserId this.id}}
                {{#if this.isFollowed }}
                <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                    type="submit" class="btn btn-primary" style="border-radius: 100px">正在跟隨</button>
                </form>
                {{else}}
                <form action="/followships/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                    class="btn btn-outline-primary" style="border-radius: 100px">跟隨</button></form>
                {{/if}}
                {{/ifNotCond}}
              </div>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>