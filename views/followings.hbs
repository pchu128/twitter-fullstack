<div class="d-flex flex-column border-left border-right" style="width: 85vw; max-width: 576px; min-height: 500px;">
  <div class="nav-top d-flex align-items-center mt-1 mb-3" style="height: 50px;">
    <a href="/tweets"> <i class="ml-4 mr-2 fas fa-long-arrow-alt-left" style="color: #1DA1F2;"></i></a>
    <div class="name ml-4 d-flex flex-column">
      <h5 class="m-0" style="font-weight: 900;">{{user.name}}</h5>
      <p class="text-muted m-0">{{user.account}}</p>
    </div>
  </div>

  <div class="d-flex mt-2 pb-2 border-bottom">
    <ul class="nav nav-pills d-flex justify-content-around" style="width: 100%;">
      <li class="nav-item d-flex justify-content-center">
        <a class="nav-link" href="/users/{{user.id}}/followers">Followers</a>
      </li>
      <li class="nav-item d-flex justify-content-center">
        <a class="nav-link active" href="/users/{{user.id}}/followings">Followings</a>
      </li>
    </ul>
  </div>

  <div>
    <ul class="list-group">
      {{#each usersfollowing}}
      <div class="following-container d-flex justify-content-between mt-3 mx-0 border-bottom">
        <div class="user-intro d-flex ml-3">
          <a href="/users/{{this.id}}/tweets">
            <img class="rounded-circle" style="width: 50px; height: 50px;" src="{{this.avatar}}" />
          </a>
          <div class="user-info ml-3">
            <h4 class="m-0" style="font-size: 15px; font-weight: bold;">{{this.name}}</h4>
            <span class="text-muted" style="font-size: 15px;">{{this.account}}</span>
            <p class="intro">{{this.introduction}}</p>
          </div>
        </div>

        <div class="follow-btn mr-3">
          {{#ifNotCond ../loginUserId this.id}}
          {{#if this.isFollowed }}
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button type="submit"
              class="button-cyan" style="font-size:15px; margin:0px; padding:1px;">following</button>
          </form>
          {{else}}
          <form action="/followships/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="button-cyan" style="font-size:15px; margin:0px; padding:1px;">follow</button></form>
          {{/if}}
          {{/ifNotCond}}
        </div>
      </div>
      {{/each}}
    </ul>
  </div>
</div>